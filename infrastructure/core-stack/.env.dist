# ============================================
# AWS Account Configuration (Required)
# ============================================
# Your AWS account number (12 digits)
AWS_ACCOUNT_ID=123123123123

# AWS region where resources will be deployed
AWS_REGION=eu-west-1

# Name of your ECR repository containing the Docker image
AWS_ECR_REPOSITORY_NAME=rawstack-core-api

# ============================================
# Database Configuration (Required)
# ============================================
# Database name to create
DB_NAME=mydb

# Database username
DB_USER=hello321

# Database port (optional, defaults to 5432)
DB_PORT=5432

# ============================================
# Application Configuration (Required)
# ============================================
# JWT access token time-to-live (e.g., "3600" for 1 hour)
ACCESS_TOKEN_TTL=3600

# JWT secret key for token signing (use a strong, random value)
JWT_SECRET=your-secure-jwt-secret-key-here

# ============================================
# Infrastructure Configuration (Optional)
# ============================================
# Environment name (dev, staging, prod)
ENVIRONMENT=dev

# Number of ECS tasks to run (defaults to 1)
DESIRED_TASK_COUNT=1

# Container port (defaults to 3001)
CONTAINER_PORT=3001

# Maximum number of Availability Zones (defaults to 2)
MAX_AZS=2

# Number of NAT Gateways (defaults to 1)
NAT_GATEWAYS=1

# Enable deletion protection for database (true/false, defaults to false)
ENABLE_DELETION_PROTECTION=false

# Non sensitive values
ACCESS_TOKEN_TTL=1500
REFRESH_TOKEN_TTL=604800
PASSWORD_RESET_TOKEN_TTL=604800
EMAIL_VERIFICATION_TOKEN_TTL=604800
CACHE_TTL=31499600

