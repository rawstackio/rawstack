{
  "name": "rawstack-api-core",
  "version": "v0.1.0-alpha.4",
  "description": "RawStack core API (NestJS + Prisma). Open-source, self-hosted foundation for the RawStack suite.",
  "keywords": [
    "rawstack",
    "nestjs",
    "api",
    "prisma",
    "cqrs",
    "self-hosted"
  ],
  "author": "Dan Byrne",
  "license": "MIT",
  "private": true,
  "homepage": "https://rawstack.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rawstackio/stack.git"
  },
  "bugs": {
    "url": "https://github.com/rawstackio/stack/issues"
  },
  "funding": {
    "type": "website",
    "url": "https://rawstack.io"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "nest build",
    "dev": "npx prisma migrate dev && nest start --watch -d --inspect",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest test/e2e --config jest-e2e.config.js",
    "test:unit": "jest test/unit --config jest.config.js",
    "test:integration": "jest test/integration --config jest-integration.config.js"
  },
  "dependencies": {
    "@aws-sdk/client-eventbridge": "^3.971.0",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.12",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "7.2.0",
    "argon2": "^0.44.0",
    "dayjs": "^1.11.19",
    "ioredis": "^5.9.2",
    "nest-commander": "^3.20.1",
    "nestjs-zod": "^5.1.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.17.1",
    "prisma": "7.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
