{
  "name": "rawstack-api-core",
  "version": "v0.1.0-alpha.1",
  "description": "RawStack core API (NestJS + Prisma). Open-source, self-hosted foundation for the RawStack suite.",
  "keywords": ["rawstack", "nestjs", "api", "prisma", "cqrs", "self-hosted"],
  "author": "Dan Byrne",
  "license": "MIT",
  "private": true,
  "homepage": "https://rawstack.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rawstackio/stack.git"
  },
  "bugs": {
    "url": "https://github.com/rawstackio/stack/issues"
  },
  "funding": {
    "type": "website",
    "url": "https://rawstack.io"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "nest build",
    "dev": "npx prisma migrate dev && nest start --watch -d --inspect",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest test/e2e --config jest-e2e.config.js",
    "test:e2e:debug": "node --inspect -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest test/e2e --config jest-e2e.config.js --runInBand",
    "test:unit": "jest test/unit --config jest.config.js"
  },
  "dependencies": {
    "@aws-sdk/client-eventbridge": "^3.821.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "6.12.0",
    "argon2": "^0.43.0",
    "dayjs": "^1.11.13",
    "ioredis": "^5.6.1",
    "nest-commander": "^3.17.0",
    "nestjs-zod": "^4.3.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "6.12.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.2",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
