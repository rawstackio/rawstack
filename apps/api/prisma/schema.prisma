// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // Use Prisma's default output (node_modules/.prisma/client)
}

datasource db {
  provider = "postgresql"
}

model User {
  internalId      Int       @id @default(autoincrement())
  id              String    @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?
  email           String    @unique
  unverifiedEmail String?
  hash            String
  roles           Roles[]   @default([])

  @@map("users")
}

enum Roles {
  ADMIN
  VERIFIED_USER
}

model Token {
  internalId  Int       @id @default(autoincrement())
  id          String    @unique
  tokenHash   String    @unique
  rootTokenId String
  createdAt   DateTime  @default(now())
  expiresAt   DateTime
  usedAt      DateTime?
  userId      String
  type        TokenType @default(LOGIN)

  @@map("tokens")
}

enum TokenType {
  LOGIN
  PASSWORD_RESET
  EMAIL_VERIFICATION
}
